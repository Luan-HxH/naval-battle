#include <stdio.h>

int main() {
    // Inicializa todo o tabuleiro 10x10 com 0 (água)
    int tabuleiro[10][10] = {0};
    int i, j;

    // Navio Horizontal (Linha 2, Colunas 2, 3, 4)
    for (j = 2; j < 5; j++) tabuleiro[2][j] = 3;

    // Navio Vertical (Linhas 5, 6, 7, Coluna 7)
    for (i = 5; i < 8; i++) tabuleiro[i][7] = 3;

    // Exibição simplificada
    printf("    A B C D E F G H I J\n"); // Cabeçalho de letras
    for (i = 0; i < 10; i++) {
        printf("%2d ", i + 1); // Numeração das linhas (1-10)
        for (j = 0; j < 10; j++) {
            printf(" %d", tabuleiro[i][j]);
        }
        printf("\n");
    }

    return 0;
}